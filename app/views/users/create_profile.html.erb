<%= form_for @user, :url => "/users", :method => :put do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>


  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>

  <div><%= f.label :password, "Password" %><br />
  <%= f.password_field :password %></div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>