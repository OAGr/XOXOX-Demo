<h2> Create a <%= @offer.name %> Thanks Page</h2>
<%= form_for @offer, :html => {:multipart => true} do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>
      <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :thanks_video %><br />
    <%= f.text_field :thanks_video %>
  </div>
  <div class="field">
    <%= f.label :thanks_audio %><br />
    <%= f.text_field :thanks_audio %>
  </div>
  <div class="field">
    <%= f.label :thanks_text %><br />
    <%= f.text_area :thanks_text %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
