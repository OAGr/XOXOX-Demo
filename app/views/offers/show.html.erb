							<%= form_for [@offer, @offer.subscriptions.build] do |f| %>

							  <%= f.text_field :name %></br></br>

							  <%= f.text_field :email %> </br></br>
							<div class=""><%= f.submit "Sign Me Up!", :class => "btn large primary" %></div>
							<% end %>
						</div>
						
					</div>
				
			</div>
			<div class="span1">
			</div>
		</div>
	</div>
</div>
