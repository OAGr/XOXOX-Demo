		<% @user.offers.each do |offer| %>
		
		<tr> 
			<th> <%= link_to(offer.name, offer) %> </th>
			<th> <%= link_to 'Edit Show', edit_offer_path(offer) %> </th>
			<th> <%= link_to( 'Edit Thanks', edit_thanks_offer_path(offer) ) %></th>
			
			<th> <%=  link_to( 'Subscriptions', offer_subscriptions_path(offer) ) %>  </th>
