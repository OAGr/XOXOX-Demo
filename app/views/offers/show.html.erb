<div class="row">
	<div class="offer_header"> <%= @offer.name %>
   </div>
</div>

<div class="row">
	<div class="span8 offer-bullets-horizontal" >
		<ul>
		<li>
			<%= @offer.bullet1 %>
		</li>
		<li>
			<%= @offer.bullet2 %>
		</li>
		<li>
			<%= @offer.bullet3 %>
		</li>
		</ul>
	</div>
	<div class="span8">
