<h1>Listing offers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Video url</th>
    <th>Bullet1</th>
    <th>Bullet2</th>
    <th>Bullet3</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.name %></td>
    <td><%= offer.video_url %></td>
    <td><%= offer.bullet1 %></td>
    <td><%= offer.bullet2 %></td>
    <td><%= offer.bullet3 %></td>
    <td><%= offer.user %></td>

    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

